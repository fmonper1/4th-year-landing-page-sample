!!!
%html
  = render 'layouts/head'

  %body.no-touch{ data: { spy: :scroll, target: "#main-nav" } }
    = render 'layouts/noscript_flash'

    %nav#main-nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          %button#mobile-nav-btn.navbar-toggle{ data: { target: ".navbar-collapse", toggle: :collapse, type: :button } }
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to :root, class: 'navbar-brand scroll' do
            = image_tag 'epigenesys_light_no_subtitle.png', alt: 'epiGenesys - a University of Sheffield company', height: 40

        .collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            %li= link_to 'Section 1', '#section-1', class: 'scroll'
            %li= link_to 'Section 2', '#section-2', class: 'scroll'
            %li= link_to 'Section 3', '#section-3', class: 'scroll'
            %li= link_to 'Section 4', '#section-4', class: 'scroll'
            %li= link_to 'Section 5', '#section-5', class: 'scroll'

    = yield
